! Use a nice truetype font and size by default... 
xterm*faceName: Meslo LG L for Powerline:style=Regular
xterm*faceSize: 8
xterm*utf: on
xterm*utf8: on

! Every shell is a login shell by default (for inclusion of all necessary environment variables)
xterm*loginshell: true

! Number of line of scrollback...
xterm*savelines: 16384

! double-click to select whole URLs :D
xterm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

! colors
!1. directory
!2. symbolic link
!3. socket
!4. pipe
!5. executable
!6. block special
!7. character special
!8. executable with setuid bit set
!9. executable with setgid bit set
!10. directory writable to others, with sticky bit
!11. directory writable to others, without sticky bit
!
xterm*foreground: green
!xterm*background: black
xterm*background: rgb:208/208/208
xterm*color0: black
xterm*color1: blue
!xterm*color2: rgb:00/a8/00
!xterm*color3: rgb:a8/54/00
!xterm*color4: rgb:00/00/a8
!xterm*color5: rgb:a8/00/a8
!xterm*color6: rgb:00/a8/a8
!xterm*color7: rgb:a8/a8/a8
!xterm*color8: rgb:54/54/54
!xterm*color9: rgb:fc/54/54
!xterm*color10: rgb:54/fc/54
!xterm*color11: rgb:fc/fc/54
!xterm*color12: rgb:54/54/fc
!xterm*color13: rgb:fc/54/fc
!xterm*color14: rgb:54/fc/fc
!xterm*color15: rgb:fc/fc/fc

! scrollBar 
!xterm*ScrollBar: true
xterm*ScrollBar: false

! scrollBar on the right
!xterm*rightScrollBar: true

! terminal scroll down anytime key is pressed
xterm*ScrollKey: true

! stop output to terminal from jumping down to bottom of scroll again
!xterm*scrollTtyOutput: false

! enable selectToClipboaad
xTerm*selectToClipboard:true

! xmessage
!
! Xmessage*font: -*-dejavu sans mono-*-*-*-*-*-140-*-*-*-*-*-*
! Xmessage.geometry: -0+0
Xmessage.center: true
Xmessage.Form.Command.shapeStyle: Rectangle
Xmessage.Form.okay.foreground: green
Xmessage.Form.cancel.foreground: red
Xmessage.Form.?.foreground: #a0c0e0
Xmessage*background: black
Xmessage*foreground: #a0c0e0
Xmessage*defaultButton: okay
Xmessage*international: true
